<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/ralewayText</item>
        <item name="buttonStyle">@style/ralewayBtn</item>
    </style>


<style name= "ralewayText" parent= "android:Widget.TextView" >
<item name= "android:fontFamily" > @font/raleway</item>
</style>


    <style name= "ralewayBtn" parent= "android:Widget.Button" >
        <item name= "android:fontFamily" > @font/raleway</item>
    </style>

</resources>